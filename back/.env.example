# =========================================================
# ERPlay - Example environment file (BACKEND)
# Copy to ".env" and fill values.
# =========================================================

# -------------------------
# Database (MySQL)
# -------------------------
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=erplay

# -------------------------
# Frontend (CORS/origin)
# -------------------------
FRONTEND_URL=http://localhost:5173

# -------------------------
# JWT secrets
# Use strong random strings in real deployments.
# -------------------------
JWT_SECRET=CHANGE_ME_STRONG_RANDOM_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_STRONG_RANDOM_REFRESH_SECRET
JWT_RESET_SECRET=CHANGE_ME_STRONG_RANDOM_RESET_SECRET

# -------------------------
# SMTP (Email)
# Prefer App Passwords if using Gmail.
# -------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@example.com
SMTP_PASS=YOUR_SMTP_PASSWORD_OR_APP_PASSWORD

# -------------------------
# Docker entrypoint behavior
# -------------------------
# If true: will import erplay.sql ONLY when DB is empty.
RUN_DB_SEED=false

# If true and RUN_DB_SEED=false: will create a default supervisor account
CREATE_DEFAULT_ADMIN=true

# Default admin user (recommended for local only)
DEFAULT_ADMIN_EMAIL=erplay.supervisor@gmail.com
DEFAULT_ADMIN_NAME=ERPlay
DEFAULT_ADMIN_LASTNAME=Supervisor

# If empty, an autogenerated password will be generated and printed once in logs.
DEFAULT_ADMIN_PASSWORD=
