{
    "compilerOptions": {
        "target": "ES2017", 
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["esnext"],
        "strict":false,
        "sourceMap":true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false,
        "skipLibCheck": true,
        "moduleResolution": "node",    
        "typeRoots": ["./src/types", "./node_modules/@types"]


    },
    "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}